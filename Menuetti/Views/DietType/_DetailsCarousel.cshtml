@model Recipes


<div class="DetCarousel" id="recipe-@Model.RecipeId" style="display:none; padding:0.5em">
    <div>
        <dl class="dl-horizontal">
            <dt>
                Annoksia
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Portions)
            </dd>
            <dt>
                Ruokavalio
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DietType)
            </dd>
        </dl>
    </div>
    <hr />
    <h4>Reseptin raaka-aineet</h4>
    @*@Model.Ingredients.Count //Katso näitä, älä jätä ikuisiksi ajoiksi tänne roikkumaan

        @ViewBag.CarouselIngredients //Katso näitä, älä jätä ikuisiksi ajoiksi tänne roikkumaan*@

    <table>
        @foreach (var item in Model.Ingredients)
        {
            <tr>
                <td class="td-align-right"> @item.AmountG </td>
                <td> @item.RecipeUnit</td>
                <td> @item.IngredientName </td>
            </tr>
        }
    </table>
    <hr />

    <h5>Ohjeet</h5>

    <p class="multiline">
        @Html.DisplayFor(model => model.Instructions)
    </p>
    <hr />
</div>
